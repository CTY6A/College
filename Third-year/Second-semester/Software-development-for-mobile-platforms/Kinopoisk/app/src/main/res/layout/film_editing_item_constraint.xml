<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/film_editing_item_image"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#32CD32"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/baseline_edit_white_36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/film_editing_label_trailer_local_file"
            style="@style/ToolBarTextView"
            android:layout_marginTop="20dp"
            android:text="@string/film_adding_label_trailer_local_file_string"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_item_image" />

        <EditText
            android:id="@+id/film_editing_edit_text_trailer_local_file"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:hint="@string/film_adding_edit_text_trailer_local_file_string"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_label_trailer_local_file"
            tools:ignore="TextFields"
            android:autofillHints="" />

        <CheckBox
            android:id="@+id/film_editing_checkbox_trailer_local_file"
            style="@style/FilterDialogSingleCheckBoxPrimary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            android:text="@string/film_editing_checkbox_trailer_local_file_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_edit_text_trailer_local_file" />

        <TextView
            android:id="@+id/film_editing_label_trailer_URI"
            style="@style/ToolBarTextView"
            android:layout_marginTop="20dp"
            android:text="@string/film_adding_label_trailer_URI_string"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_checkbox_trailer_local_file" />

        <EditText
            android:id="@+id/film_editing_edit_text_trailer_URI"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:hint="@string/film_adding_edit_text_trailer_URI_string"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_label_trailer_URI"
            tools:ignore="TextFields"
            android:autofillHints="" />

        <CheckBox
            android:id="@+id/film_editing_checkbox_trailer_URI"
            style="@style/FilterDialogSingleCheckBoxPrimary"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            android:text="@string/film_editing_checkbox_trailer_URI_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/film_editing_edit_text_trailer_URI" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>