    <span asp-validation-for="PassportNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="KemVidan">Кем Выдан</label><br>
    <input asp-for="KemVidan" class="form-control" />
    <span asp-validation-for="KemVidan" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DateVidan">Когда Выдан</label><br>
    <input asp-for="DateVidan" class="form-control" />
    <span asp-validation-for="DateVidan" class="text-danger"></span>
</div>
<div class="form-group">
