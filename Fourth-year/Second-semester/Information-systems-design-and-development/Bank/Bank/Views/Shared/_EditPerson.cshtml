@model PersonEditViewModel

@{
    var err = string.Empty;
    var upateError = ViewData.ModelState["UpdateDB"];
    if (upateError?.Errors != null && upateError.Errors.Count > 0)
    {
        err = upateError.Errors[0].ErrorMessage;
    }
}
<span class="text-danger">@err</span>
<div class="form-group">
    <label asp-for="FirstName">Имя</label><br>
    <input asp-for="FirstName" class="form-control" />
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="LastName">Фамилия</label><br>
    <input asp-for="LastName" class="form-control" />
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Patronymic">Отчество</label><br>
    <input asp-for="Patronymic" class="form-control" />
    <span asp-validation-for="Patronymic" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DateOfBirth">Дата рождения</label><br>
    <input asp-for="DateOfBirth" class="form-control" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="SeriaPassport">Серия Пасспорта</label><br>
    <input asp-for="SeriaPassport" class="form-control" />
    <span asp-validation-for="SeriaPassport" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PassportNumber">Номер Пасспорта</label><br>
